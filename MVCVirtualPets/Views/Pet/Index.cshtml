@model MVCVirtualPets.Models.Shelter
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Main.css" rel="stylesheet" />
</head>
<body>
    <h1>Pets</h1>
    <p>Here's all your pets.</p>
    <ol>
        @foreach(var pet in Model.PetDict)
        {
            <li>
                <a href="/Pet/Details/@pet.Key">@pet.Value.Name</a>
            </li>
        }


    </ol>
    <a href="/">Back to Main Page</a>
</body>
</html>
